<apex:page standardController="Account" showHeader="false" sidebar="false">
    <apex:includeScript value="/soap/ajax/42.0/connection.js"/>
    <script type="text/javascript">
        function lockRecord() {
            var recordId = '{!Account.Id}';
            sforce.connection.sessionId = '{!$Api.Session_ID}';
            var result = sforce.connection.lock(recordId);
            if (result.isSuccess()) {
                alert('The record has been locked successfully.');
            } else {
                alert('The record could not be locked, please try again later.');
            }
        }
    </script>
    <apex:form >
        <apex:outputPanel >
            <apex:commandLink value="Lock Record" onclick="lockRecord();return false;"/>
        </apex:outputPanel>  
    </apex:form>
</apex:page>